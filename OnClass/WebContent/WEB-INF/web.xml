<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>ClientServlet</servlet-name>
    <servlet-class>web.servlet.ClientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClientServlet</servlet-name>
    <url-pattern>/servlet/ClientServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>captchaCode</servlet-name>
    <servlet-class>web.servlet.captchaCode</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>captchaCode</servlet-name>
    <url-pattern>/servlet/captchaCode</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PaymentResponse</servlet-name>
    <servlet-class>web.servlet.PaymentResponse</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentResponse</servlet-name>
    <url-pattern>/servlet/PaymentResponse</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>